@{
    ViewBag.Title = "- Kategori Yönetimi";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- Page Header -->
<div class="flex flex-col gap-2 mb-6">
    <div class="flex items-center gap-2 text-sm">
        <a class="text-[#617589] dark:text-[#94a3b8] hover:text-primary transition-colors" href="@Url.Action("Index", "Admin")">Yönetici</a>
        <span class="text-[#617589] dark:text-[#94a3b8]">/</span>
        <span class="text-[#111418] dark:text-white font-medium">Kategori Yönetimi</span>
    </div>
    <div class="flex flex-col md:flex-row justify-between items-start md:items-end gap-4">
        <div>
            <h1 class="text-[#111418] dark:text-white text-3xl font-bold">Kategori Yönetimi</h1>
            <p class="text-[#617589] dark:text-[#94a3b8] mt-1">Blog kategorilerini buradan ekleyebilir, düzenleyebilir veya silebilirsiniz.</p>
        </div>
        <button class="flex items-center gap-2 rounded-lg bg-primary/10 hover:bg-primary/20 text-primary px-6 py-2.5 text-sm font-bold transition-all">
            <span class="material-symbols-outlined text-[18px]">download</span>
            <span>Listeyi Dışa Aktar</span>
        </button>
    </div>
</div>

<!-- Stats Cards -->
<div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
    <div class="bg-white dark:bg-[#1a2632] rounded-xl p-6 border border-[#e5e7eb] dark:border-[#2d3b4a] shadow-sm hover:shadow-md transition-shadow">
        <div class="flex justify-between items-start">
            <div>
                <p class="text-[#617589] dark:text-[#94a3b8] text-sm font-medium mb-1">Toplam Kategori</p>
                <p class="text-[#111418] dark:text-white text-3xl font-bold">24</p>
            </div>
            <div class="p-2 bg-blue-50 dark:bg-blue-900/20 rounded-lg text-primary">
                <span class="material-symbols-outlined text-[20px]">category</span>
            </div>
        </div>
        <p class="text-[#078838] dark:text-green-400 text-sm font-semibold mt-3 flex items-center gap-1">
            <span class="material-symbols-outlined text-xs">trending_up</span> +2 Bu Ay
        </p>
    </div>

    <div class="bg-white dark:bg-[#1a2632] rounded-xl p-6 border border-[#e5e7eb] dark:border-[#2d3b4a] shadow-sm hover:shadow-md transition-shadow">
        <div class="flex justify-between items-start">
            <div>
                <p class="text-[#617589] dark:text-[#94a3b8] text-sm font-medium mb-1">Aktif Kategoriler</p>
                <p class="text-[#111418] dark:text-white text-3xl font-bold">18</p>
            </div>
            <div class="p-2 bg-green-50 dark:bg-green-900/20 rounded-lg text-green-600 dark:text-green-400">
                <span class="material-symbols-outlined text-[20px]">check_circle</span>
            </div>
        </div>
        <p class="text-[#617589] dark:text-[#94a3b8] text-sm font-medium mt-3">6 Pasif Kategori</p>
    </div>

    <div class="bg-white dark:bg-[#1a2632] rounded-xl p-6 border border-[#e5e7eb] dark:border-[#2d3b4a] shadow-sm hover:shadow-md transition-shadow">
        <div class="flex justify-between items-start">
            <div>
                <p class="text-[#617589] dark:text-[#94a3b8] text-sm font-medium mb-1">En Popüler</p>
                <p class="text-[#111418] dark:text-white text-3xl font-bold">Yazılım</p>
            </div>
            <div class="p-2 bg-orange-50 dark:bg-orange-900/20 rounded-lg text-orange-600 dark:text-orange-400">
                <span class="material-symbols-outlined text-[20px]">star</span>
            </div>
        </div>
        <p class="text-primary text-sm font-semibold mt-3">Toplam trafiğin %12'si</p>
    </div>
</div>

<!-- Main Content Grid -->
<div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <!-- Quick Add Form -->
    <div class="lg:col-span-1 space-y-6">
        <div class="bg-white dark:bg-[#1a2632] rounded-xl border border-[#e5e7eb] dark:border-[#2d3b4a] shadow-sm overflow-hidden">
            <div class="px-6 py-4 border-b border-[#f0f2f4] dark:border-[#2d3b4a] bg-[#f8f9fa] dark:bg-[#1e293b]">
                <h2 class="text-[#111418] dark:text-white text-lg font-bold">Yeni Kategori Oluştur</h2>
            </div>
            <form class="p-6 space-y-4">
                <div>
                    <label class="block text-sm font-semibold text-[#111418] dark:text-white mb-2">Kategori Adı</label>
                    <input class="form-input w-full rounded-lg border-[#e5e7eb] dark:border-[#2d3b4a] dark:bg-[#24303c] dark:text-white focus:border-primary focus:ring-primary transition-all" placeholder="Örn: Teknoloji" type="text" />
                </div>
                <div>
                    <label class="block text-sm font-semibold text-[#111418] dark:text-white mb-2">Açıklama (Opsiyonel)</label>
                    <textarea class="form-input w-full rounded-lg border-[#e5e7eb] dark:border-[#2d3b4a] dark:bg-[#24303c] dark:text-white focus:border-primary focus:ring-primary transition-all" placeholder="Kategori hakkında kısa bilgi..." rows="3"></textarea>
                </div>
                <div class="flex items-center justify-between py-2">
                    <span class="text-sm font-medium text-[#111418] dark:text-white">Varsayılan Aktif</span>
                    <label class="relative inline-flex items-center cursor-pointer">
                        <input checked class="sr-only peer" type="checkbox" />
                        <div class="w-11 h-6 bg-gray-200 dark:bg-gray-700 peer-focus:outline-none rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:start-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-primary"></div>
                    </label>
                </div>
                <button class="w-full bg-primary hover:bg-primary-dark text-white font-bold py-3 rounded-lg shadow-lg shadow-primary/20 transition-all flex items-center justify-center gap-2 mt-4" type="submit">
                    <span class="material-symbols-outlined text-[18px]">add</span>
                    <span>Kategori Ekle</span>
                </button>
            </form>
        </div>

        <div class="bg-primary/5 dark:bg-primary/10 border border-primary/20 rounded-xl p-6">
            <h3 class="text-primary font-bold mb-2 flex items-center gap-2">
                <span class="material-symbols-outlined text-[20px]">info</span>
                İpucu
            </h3>
            <p class="text-sm text-[#617589] dark:text-[#94a3b8] leading-relaxed">
                Kategorileri silmek yerine pasife alarak ilgili yazıların boşa düşmesini engelleyebilirsiniz. Silme işlemi geri alınamaz.
            </p>
        </div>
    </div>

    <!-- Category List Table -->
    <div class="lg:col-span-2">
        <div class="bg-white dark:bg-[#1a2632] rounded-xl border border-[#e5e7eb] dark:border-[#2d3b4a] shadow-sm overflow-hidden">
            <div class="p-6 border-b border-[#f0f2f4] dark:border-[#2d3b4a] flex flex-wrap justify-between items-center gap-4">
                <h2 class="text-[#111418] dark:text-white text-lg font-bold">Kategori Listesi</h2>
                <div class="flex items-center gap-2 bg-[#f0f2f4] dark:bg-[#24303c] rounded-lg px-3 py-1.5">
                    <span class="material-symbols-outlined text-[#617589] dark:text-[#94a3b8] text-[18px]">filter_list</span>
                    <select class="bg-transparent border-none text-sm font-medium focus:ring-0 text-[#111418] dark:text-white py-0 pl-1">
                        <option>Tümü</option>
                        <option>Aktif</option>
                        <option>Pasif</option>
                    </select>
                </div>
            </div>

            <div class="overflow-x-auto">
                <table class="w-full text-left">
                    <thead class="bg-[#f8f9fa] dark:bg-[#1e293b]">
                        <tr>
                            <th class="px-6 py-4 text-xs font-bold text-[#617589] dark:text-[#94a3b8] uppercase tracking-wider">Kategori Adı</th>
                            <th class="px-6 py-4 text-xs font-bold text-[#617589] dark:text-[#94a3b8] uppercase tracking-wider">Yazı Sayısı</th>
                            <th class="px-6 py-4 text-xs font-bold text-[#617589] dark:text-[#94a3b8] uppercase tracking-wider">Durum</th>
                            <th class="px-6 py-4 text-xs font-bold text-[#617589] dark:text-[#94a3b8] uppercase tracking-wider text-right">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-[#f0f2f4] dark:divide-[#2d3b4a]">
                        <tr class="hover:bg-[#f8f9fa] dark:hover:bg-[#1e293b] transition-colors">
                            <td class="px-6 py-4">
                                <div class="flex items-center gap-3">
                                    <div class="size-8 rounded-lg bg-blue-100 dark:bg-blue-900/30 flex items-center justify-center text-primary font-bold text-xs">Y</div>
                                    <span class="font-semibold text-[#111418] dark:text-white">Yazılım</span>
                                </div>
                            </td>
                            <td class="px-6 py-4">
                                <span class="bg-primary/10 text-primary text-xs font-bold px-2.5 py-1 rounded-full">124 Yazı</span>
                            </td>
                            <td class="px-6 py-4">
                                <span class="flex items-center gap-1.5 text-[#078838] dark:text-green-400 font-bold text-xs uppercase tracking-tight">
                                    <span class="size-2 rounded-full bg-[#078838]"></span>
                                    Aktif
                                </span>
                            </td>
                            <td class="px-6 py-4 text-right">
                                <div class="flex justify-end gap-2">
                                    <button class="p-2 text-[#617589] dark:text-[#94a3b8] hover:text-primary hover:bg-primary/10 rounded-lg transition-all" title="Düzenle">
                                        <span class="material-symbols-outlined text-[18px]">edit</span>
                                    </button>
                                    <button class="p-2 text-[#617589] dark:text-[#94a3b8] hover:text-red-500 hover:bg-red-50 dark:hover:bg-red-900/20 rounded-lg transition-all" title="Sil">
                                        <span class="material-symbols-outlined text-[18px]">delete</span>
                                    </button>
                                </div>
                            </td>
                        </tr>

                        <tr class="hover:bg-[#f8f9fa] dark:hover:bg-[#1e293b] transition-colors">
                            <td class="px-6 py-4">
                                <div class="flex items-center gap-3">
                                    <div class="size-8 rounded-lg bg-purple-100 dark:bg-purple-900/30 flex items-center justify-center text-purple-600 dark:text-purple-400 font-bold text-xs">T</div>
                                    <span class="font-semibold text-[#111418] dark:text-white">Tasarım</span>
                                </div>
                            </td>
                            <td class="px-6 py-4">
                                <span class="bg-primary/10 text-primary text-xs font-bold px-2.5 py-1 rounded-full">86 Yazı</span>
                            </td>
                            <td class="px-6 py-4">
                                <span class="flex items-center gap-1.5 text-[#078838] dark:text-green-400 font-bold text-xs uppercase tracking-tight">
                                    <span class="size-2 rounded-full bg-[#078838]"></span>
                                    Aktif
                                </span>
                            </td>
                            <td class="px-6 py-4 text-right">
                                <div class="flex justify-end gap-2">
                                    <button class="p-2 text-[#617589] dark:text-[#94a3b8] hover:text-primary hover:bg-primary/10 rounded-lg transition-all">
                                        <span class="material-symbols-outlined text-[18px]">edit</span>
                                    </button>
                                    <button class="p-2 text-[#617589] dark:text-[#94a3b8] hover:text-red-500 hover:bg-red-50 dark:hover:bg-red-900/20 rounded-lg transition-all">
                                        <span class="material-symbols-outlined text-[18px]">delete</span>
                                    </button>
                                </div>
                            </td>
                        </tr>

                        <tr class="hover:bg-[#f8f9fa] dark:hover:bg-[#1e293b] transition-colors">
                            <td class="px-6 py-4">
                                <div class="flex items-center gap-3">
                                    <div class="size-8 rounded-lg bg-[#f0f2f4] dark:bg-[#2d3b4a] flex items-center justify-center text-[#617589] dark:text-[#94a3b8] font-bold text-xs">E</div>
                                    <span class="font-semibold text-[#111418] dark:text-white">Etkinlikler</span>
                                </div>
                            </td>
                            <td class="px-6 py-4">
                                <span class="bg-[#f0f2f4] dark:bg-[#2d3b4a] text-[#617589] dark:text-[#94a3b8] text-xs font-bold px-2.5 py-1 rounded-full">12 Yazı</span>
                            </td>
                            <td class="px-6 py-4">
                                <span class="flex items-center gap-1.5 text-[#617589] dark:text-[#94a3b8] font-bold text-xs uppercase tracking-tight">
                                    <span class="size-2 rounded-full bg-[#617589]"></span>
                                    Pasif
                                </span>
                            </td>
                            <td class="px-6 py-4 text-right">
                                <div class="flex justify-end gap-2">
                                    <button class="p-2 text-[#617589] dark:text-[#94a3b8] hover:text-primary hover:bg-primary/10 rounded-lg transition-all">
                                        <span class="material-symbols-outlined text-[18px]">edit</span>
                                    </button>
                                    <button class="p-2 text-[#617589] dark:text-[#94a3b8] hover:text-red-500 hover:bg-red-50 dark:hover:bg-red-900/20 rounded-lg transition-all">
                                        <span class="material-symbols-outlined text-[18px]">delete</span>
                                    </button>
                                </div>
                            </td>
                        </tr>

                        <tr class="hover:bg-[#f8f9fa] dark:hover:bg-[#1e293b] transition-colors">
                            <td class="px-6 py-4">
                                <div class="flex items-center gap-3">
                                    <div class="size-8 rounded-lg bg-orange-100 dark:bg-orange-900/30 flex items-center justify-center text-orange-600 dark:text-orange-400 font-bold text-xs">K</div>
                                    <span class="font-semibold text-[#111418] dark:text-white">Kariyer</span>
                                </div>
                            </td>
                            <td class="px-6 py-4">
                                <span class="bg-primary/10 text-primary text-xs font-bold px-2.5 py-1 rounded-full">43 Yazı</span>
                            </td>
                            <td class="px-6 py-4">
                                <span class="flex items-center gap-1.5 text-[#078838] dark:text-green-400 font-bold text-xs uppercase tracking-tight">
                                    <span class="size-2 rounded-full bg-[#078838]"></span>
                                    Aktif
                                </span>
                            </td>
                            <td class="px-6 py-4 text-right">
                                <div class="flex justify-end gap-2">
                                    <button class="p-2 text-[#617589] dark:text-[#94a3b8] hover:text-primary hover:bg-primary/10 rounded-lg transition-all">
                                        <span class="material-symbols-outlined text-[18px]">edit</span>
                                    </button>
                                    <button class="p-2 text-[#617589] dark:text-[#94a3b8] hover:text-red-500 hover:bg-red-50 dark:hover:bg-red-900/20 rounded-lg transition-all">
                                        <span class="material-symbols-outlined text-[18px]">delete</span>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            <div class="p-6 border-t border-[#f0f2f4] dark:border-[#2d3b4a] flex flex-col sm:flex-row justify-between items-center gap-4">
                <p class="text-sm text-[#617589] dark:text-[#94a3b8]">Toplam 24 kategoriden 1-4 arası gösteriliyor</p>
                <div class="flex items-center gap-1">
                    <button class="p-2 border border-[#e5e7eb] dark:border-[#2d3b4a] rounded-lg text-[#617589] dark:text-[#94a3b8] hover:bg-[#f0f2f4] dark:hover:bg-[#24303c] disabled:opacity-50 transition-colors" disabled>
                        <span class="material-symbols-outlined text-[20px]">chevron_left</span>
                    </button>
                    <button class="px-3.5 py-1.5 bg-primary text-white rounded-lg text-sm font-bold">1</button>
                    <button class="px-3.5 py-1.5 border border-[#e5e7eb] dark:border-[#2d3b4a] dark:text-white rounded-lg text-sm font-medium hover:bg-[#f0f2f4] dark:hover:bg-[#24303c] transition-colors">2</button>
                    <button class="px-3.5 py-1.5 border border-[#e5e7eb] dark:border-[#2d3b4a] dark:text-white rounded-lg text-sm font-medium hover:bg-[#f0f2f4] dark:hover:bg-[#24303c] transition-colors">3</button>
                    <button class="p-2 border border-[#e5e7eb] dark:border-[#2d3b4a] rounded-lg text-[#617589] dark:text-[#94a3b8] hover:bg-[#f0f2f4] dark:hover:bg-[#24303c] transition-colors">
                        <span class="material-symbols-outlined text-[20px]">chevron_right</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>