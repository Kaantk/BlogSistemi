@{
    ViewBag.Title = "- Rol Yönetimi";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- Page Header -->
<div class="flex flex-col gap-2 mb-6">
    <div class="flex items-center gap-2 text-sm">
        <a class="text-[#617589] dark:text-[#94a3b8] hover:text-primary transition-colors" href="@Url.Action("Index", "Admin")">Yönetici</a>
        <span class="text-[#617589] dark:text-[#94a3b8]">/</span>
        <span class="text-[#111418] dark:text-white font-medium">Rol Yönetimi</span>
    </div>
    <div class="flex justify-between items-end">
        <div>
            <h1 class="text-[#111418] dark:text-white text-3xl font-bold">Rol Yönetimi</h1>
            <p class="text-[#617589] dark:text-[#94a3b8] mt-1">Sistem rollerini, kullanıcı yetkilerini ve erişim seviyelerini buradan kontrol edebilirsiniz.</p>
        </div>
        <button class="flex items-center gap-2 rounded-lg bg-primary h-11 px-6 text-white text-sm font-bold shadow-lg shadow-primary/20 hover:bg-primary-dark transition-all hover:scale-[1.02]">
            <span class="material-symbols-outlined text-[20px]">add_circle</span>
            Yeni Rol Ekle
        </button>
    </div>
</div>

<!-- Stats Cards -->
<div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
    <div class="bg-white dark:bg-[#1a2632] flex flex-col gap-2 rounded-xl p-6 border border-[#e5e7eb] dark:border-[#2d3b4a] shadow-sm hover:shadow-md transition-shadow">
        <div class="flex justify-between items-start">
            <p class="text-[#617589] dark:text-[#94a3b8] text-sm font-medium">Toplam Rol</p>
            <div class="bg-primary/10 text-primary p-2 rounded-lg">
                <span class="material-symbols-outlined text-[20px]">shield_person</span>
            </div>
        </div>
        <p class="text-[#111418] dark:text-white text-3xl font-bold">5</p>
        <p class="text-[#078838] dark:text-green-400 text-xs font-medium">+1 Yeni geçen ay</p>
    </div>

    <div class="bg-white dark:bg-[#1a2632] flex flex-col gap-2 rounded-xl p-6 border border-[#e5e7eb] dark:border-[#2d3b4a] shadow-sm hover:shadow-md transition-shadow">
        <div class="flex justify-between items-start">
            <p class="text-[#617589] dark:text-[#94a3b8] text-sm font-medium">Atanmış Kullanıcılar</p>
            <div class="bg-blue-500/10 text-blue-500 p-2 rounded-lg">
                <span class="material-symbols-outlined text-[20px]">group</span>
            </div>
        </div>
        <p class="text-[#111418] dark:text-white text-3xl font-bold">142</p>
        <p class="text-[#617589] dark:text-[#94a3b8] text-xs">Aktif blog yazarları dahil</p>
    </div>

    <div class="bg-white dark:bg-[#1a2632] flex flex-col gap-2 rounded-xl p-6 border border-[#e5e7eb] dark:border-[#2d3b4a] shadow-sm hover:shadow-md transition-shadow">
        <div class="flex justify-between items-start">
            <p class="text-[#617589] dark:text-[#94a3b8] text-sm font-medium">Güvenlik Durumu</p>
            <div class="bg-amber-500/10 text-amber-500 p-2 rounded-lg">
                <span class="material-symbols-outlined text-[20px]">verified_user</span>
            </div>
        </div>
        <p class="text-[#111418] dark:text-white text-3xl font-bold">Optimize</p>
        <p class="text-amber-600 dark:text-amber-400 text-xs font-medium">2 Rol kritik yetkiye sahip</p>
    </div>
</div>

<!-- Role Table Card -->
<div class="bg-white dark:bg-[#1a2632] rounded-xl border border-[#e5e7eb] dark:border-[#2d3b4a] shadow-sm overflow-hidden">
    <!-- Filters Bar -->
    <div class="p-4 border-b border-[#f0f2f4] dark:border-[#2d3b4a] flex flex-wrap items-center justify-between gap-4">
        <div class="flex gap-2">
            <button class="flex items-center gap-2 px-4 py-2 bg-[#f0f2f4] dark:bg-[#24303c] rounded-lg text-sm font-medium text-[#111418] dark:text-white hover:bg-[#e5e7eb] dark:hover:bg-[#2d3b4a] transition-colors">
                <span class="material-symbols-outlined text-[18px]">filter_list</span>
                <span>Filtrele</span>
            </button>
            <button class="flex items-center gap-2 px-4 py-2 bg-[#f0f2f4] dark:bg-[#24303c] rounded-lg text-sm font-medium text-[#111418] dark:text-white hover:bg-[#e5e7eb] dark:hover:bg-[#2d3b4a] transition-colors">
                <span class="material-symbols-outlined text-[18px]">swap_vert</span>
                <span>Sırala</span>
            </button>
        </div>
        <div class="text-xs text-[#617589] dark:text-[#94a3b8]">Son güncelleme: Bugün 14:45</div>
    </div>

    <!-- Table -->
    <div class="overflow-x-auto">
        <table class="w-full text-left">
            <thead class="bg-[#f8f9fa] dark:bg-[#1e293b]">
                <tr>
                    <th class="px-6 py-4 text-xs font-bold text-[#617589] dark:text-[#94a3b8] uppercase tracking-wider">Rol Adı</th>
                    <th class="px-6 py-4 text-xs font-bold text-[#617589] dark:text-[#94a3b8] uppercase tracking-wider">Açıklama</th>
                    <th class="px-6 py-4 text-xs font-bold text-[#617589] dark:text-[#94a3b8] uppercase tracking-wider">Yetki Seti</th>
                    <th class="px-6 py-4 text-xs font-bold text-[#617589] dark:text-[#94a3b8] uppercase tracking-wider text-center">Kullanıcı</th>
                    <th class="px-6 py-4 text-xs font-bold text-[#617589] dark:text-[#94a3b8] uppercase tracking-wider text-right">İşlemler</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-[#f0f2f4] dark:divide-[#2d3b4a]">
                <!-- Row 1: Süper Yönetici -->
                <tr class="hover:bg-[#f8f9fa] dark:hover:bg-[#1e293b] transition-colors">
                    <td class="px-6 py-5">
                        <div class="flex items-center gap-3">
                            <div class="size-8 rounded-lg bg-primary/10 text-primary flex items-center justify-center">
                                <span class="material-symbols-outlined text-[20px]">admin_panel_settings</span>
                            </div>
                            <span class="font-bold text-[#111418] dark:text-white">Süper Yönetici</span>
                        </div>
                    </td>
                    <td class="px-6 py-5 text-sm text-[#617589] dark:text-[#94a3b8]">Tüm sistem ayarlarına ve verilere tam erişim.</td>
                    <td class="px-6 py-5">
                        <div class="flex flex-wrap gap-1.5">
                            <span class="px-2 py-1 rounded-md bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-400 text-[10px] font-bold uppercase">Okuma</span>
                            <span class="px-2 py-1 rounded-md bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-400 text-[10px] font-bold uppercase">Yazma</span>
                            <span class="px-2 py-1 rounded-md bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-400 text-[10px] font-bold uppercase">Silme</span>
                            <span class="px-2 py-1 rounded-md bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-400 text-[10px] font-bold uppercase">Onaylama</span>
                        </div>
                    </td>
                    <td class="px-6 py-5 text-center font-bold text-[#111418] dark:text-white">3</td>
                    <td class="px-6 py-5 text-right">
                        <div class="flex justify-end gap-2">
                            <button class="p-2 text-[#617589] dark:text-[#94a3b8] hover:text-primary hover:bg-primary/10 rounded-lg transition-all" title="Düzenle">
                                <span class="material-symbols-outlined text-[20px]">edit_note</span>
                            </button>
                            <button class="p-2 text-[#617589] dark:text-[#94a3b8] cursor-not-allowed opacity-30" title="Sistem Rolü Silinemez" disabled>
                                <span class="material-symbols-outlined text-[20px]">delete</span>
                            </button>
                        </div>
                    </td>
                </tr>

                <!-- Row 2: Yazar -->
                <tr class="hover:bg-[#f8f9fa] dark:hover:bg-[#1e293b] transition-colors">
                    <td class="px-6 py-5">
                        <div class="flex items-center gap-3">
                            <div class="size-8 rounded-lg bg-blue-100 dark:bg-blue-900/30 text-blue-600 dark:text-blue-400 flex items-center justify-center">
                                <span class="material-symbols-outlined text-[20px]">edit_square</span>
                            </div>
                            <span class="font-bold text-[#111418] dark:text-white">Yazar</span>
                        </div>
                    </td>
                    <td class="px-6 py-5 text-sm text-[#617589] dark:text-[#94a3b8]">İçerik oluşturabilir ve kendi yazılarını düzenleyebilir.</td>
                    <td class="px-6 py-5">
                        <div class="flex flex-wrap gap-1.5">
                            <span class="px-2 py-1 rounded-md bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-400 text-[10px] font-bold uppercase">Okuma</span>
                            <span class="px-2 py-1 rounded-md bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-400 text-[10px] font-bold uppercase">Yazma</span>
                            <span class="px-2 py-1 rounded-md bg-[#f0f2f4] dark:bg-[#2d3b4a] text-[#617589] dark:text-[#94a3b8] text-[10px] font-bold uppercase">Silme</span>
                        </div>
                    </td>
                    <td class="px-6 py-5 text-center font-bold text-[#111418] dark:text-white">24</td>
                    <td class="px-6 py-5 text-right">
                        <div class="flex justify-end gap-2">
                            <button class="p-2 text-[#617589] dark:text-[#94a3b8] hover:text-primary hover:bg-primary/10 rounded-lg transition-all">
                                <span class="material-symbols-outlined text-[20px]">edit_note</span>
                            </button>
                            <button class="p-2 text-[#617589] dark:text-[#94a3b8] hover:text-red-500 hover:bg-red-50 dark:hover:bg-red-900/20 rounded-lg transition-all">
                                <span class="material-symbols-outlined text-[20px]">delete</span>
                            </button>
                        </div>
                    </td>
                </tr>

                <!-- Row 3: Editör -->
                <tr class="hover:bg-[#f8f9fa] dark:hover:bg-[#1e293b] transition-colors">
                    <td class="px-6 py-5">
                        <div class="flex items-center gap-3">
                            <div class="size-8 rounded-lg bg-purple-100 dark:bg-purple-900/30 text-purple-600 dark:text-purple-400 flex items-center justify-center">
                                <span class="material-symbols-outlined text-[20px]">rate_review</span>
                            </div>
                            <span class="font-bold text-[#111418] dark:text-white">Editör</span>
                        </div>
                    </td>
                    <td class="px-6 py-5 text-sm text-[#617589] dark:text-[#94a3b8]">Yazıları inceler, onaylar ve tüm içerikleri yönetir.</td>
                    <td class="px-6 py-5">
                        <div class="flex flex-wrap gap-1.5">
                            <span class="px-2 py-1 rounded-md bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-400 text-[10px] font-bold uppercase">Okuma</span>
                            <span class="px-2 py-1 rounded-md bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-400 text-[10px] font-bold uppercase">Yazma</span>
                            <span class="px-2 py-1 rounded-md bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-400 text-[10px] font-bold uppercase">Onaylama</span>
                        </div>
                    </td>
                    <td class="px-6 py-5 text-center font-bold text-[#111418] dark:text-white">8</td>
                    <td class="px-6 py-5 text-right">
                        <div class="flex justify-end gap-2">
                            <button class="p-2 text-[#617589] dark:text-[#94a3b8] hover:text-primary hover:bg-primary/10 rounded-lg transition-all">
                                <span class="material-symbols-outlined text-[20px]">edit_note</span>
                            </button>
                            <button class="p-2 text-[#617589] dark:text-[#94a3b8] hover:text-red-500 hover:bg-red-50 dark:hover:bg-red-900/20 rounded-lg transition-all">
                                <span class="material-symbols-outlined text-[20px]">delete</span>
                            </button>
                        </div>
                    </td>
                </tr>

                <!-- Row 4: Kullanıcı -->
                <tr class="hover:bg-[#f8f9fa] dark:hover:bg-[#1e293b] transition-colors">
                    <td class="px-6 py-5">
                        <div class="flex items-center gap-3">
                            <div class="size-8 rounded-lg bg-[#f0f2f4] dark:bg-[#2d3b4a] text-[#617589] dark:text-[#94a3b8] flex items-center justify-center">
                                <span class="material-symbols-outlined text-[20px]">person</span>
                            </div>
                            <span class="font-bold text-[#111418] dark:text-white">Kullanıcı</span>
                        </div>
                    </td>
                    <td class="px-6 py-5 text-sm text-[#617589] dark:text-[#94a3b8]">Sadece içerikleri okuyabilir ve yorum yapabilir.</td>
                    <td class="px-6 py-5">
                        <div class="flex flex-wrap gap-1.5">
                            <span class="px-2 py-1 rounded-md bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-400 text-[10px] font-bold uppercase">Okuma</span>
                        </div>
                    </td>
                    <td class="px-6 py-5 text-center font-bold text-[#111418] dark:text-white">107</td>
                    <td class="px-6 py-5 text-right">
                        <div class="flex justify-end gap-2">
                            <button class="p-2 text-[#617589] dark:text-[#94a3b8] hover:text-primary hover:bg-primary/10 rounded-lg transition-all">
                                <span class="material-symbols-outlined text-[20px]">edit_note</span>
                            </button>
                            <button class="p-2 text-[#617589] dark:text-[#94a3b8] hover:text-red-500 hover:bg-red-50 dark:hover:bg-red-900/20 rounded-lg transition-all">
                                <span class="material-symbols-outlined text-[20px]">delete</span>
                            </button>
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    <!-- Pagination -->
    <div class="px-6 py-4 border-t border-[#f0f2f4] dark:border-[#2d3b4a] flex items-center justify-between">
        <p class="text-sm text-[#617589] dark:text-[#94a3b8]">Toplam 5 rol gösteriliyor</p>
        <div class="flex gap-1">
            <button class="p-2 border border-[#e5e7eb] dark:border-[#2d3b4a] rounded-lg text-[#617589] dark:text-[#94a3b8] hover:bg-[#f0f2f4] dark:hover:bg-[#24303c] disabled:opacity-50 transition-colors" disabled>
                <span class="material-symbols-outlined text-[20px]">chevron_left</span>
            </button>
            <button class="px-3.5 py-1.5 bg-primary text-white rounded-lg text-sm font-bold">1</button>
            <button class="p-2 border border-[#e5e7eb] dark:border-[#2d3b4a] rounded-lg text-[#617589] dark:text-[#94a3b8] hover:bg-[#f0f2f4] dark:hover:bg-[#24303c] transition-colors">
                <span class="material-symbols-outlined text-[20px]">chevron_right</span>
            </button>
        </div>
    </div>
</div>