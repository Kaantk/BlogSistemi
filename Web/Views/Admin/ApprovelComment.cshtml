@{
    ViewBag.Title = "- Yorum Onay Sistemi";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- Page Header -->
<div class="flex flex-col gap-2 mb-6">
    <div class="flex items-center gap-2 text-sm">
        <a class="text-[#617589] dark:text-[#94a3b8] hover:text-primary transition-colors" href="@Url.Action("Index", "Admin")">Yönetici</a>
        <span class="text-[#617589] dark:text-[#94a3b8]">/</span>
        <span class="text-[#111418] dark:text-white font-medium">Yorum Onay Sistemi</span>
    </div>
    <div class="flex flex-col md:flex-row justify-between items-start md:items-end gap-4">
        <div>
            <h1 class="text-[#111418] dark:text-white text-3xl font-bold">Yorum Onay Sistemi</h1>
            <p class="text-[#617589] dark:text-[#94a3b8] mt-1">Kullanıcı yorumlarını yönetin, moderasyon işlemlerini gerçekleştirin ve topluluğu denetleyin.</p>
        </div>
        <div class="flex gap-3 w-full md:w-auto">
            <button class="flex flex-1 md:flex-none items-center justify-center gap-2 rounded-lg h-10 px-4 bg-white dark:bg-[#1a2632] border border-[#e5e7eb] dark:border-[#2d3b4a] text-[#111418] dark:text-white text-sm font-medium hover:bg-[#f0f2f4] dark:hover:bg-[#24303c] transition-colors">
                <span class="material-symbols-outlined text-[18px]">filter_list</span>
                <span>Filtrele</span>
            </button>
            <button class="flex flex-1 md:flex-none items-center justify-center gap-2 rounded-lg h-10 px-4 bg-primary/10 text-primary border border-primary/20 text-sm font-bold hover:bg-primary/20 transition-colors">
                <span class="material-symbols-outlined text-[18px]">download</span>
                <span>Dışa Aktar</span>
            </button>
        </div>
    </div>
</div>

<!-- Stats Cards -->
<div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
    <div class="bg-white dark:bg-[#1a2632] flex flex-col gap-2 rounded-xl p-6 border border-[#e5e7eb] dark:border-[#2d3b4a] shadow-sm hover:shadow-md transition-shadow">
        <div class="flex justify-between items-start">
            <p class="text-[#617589] dark:text-[#94a3b8] text-sm font-medium">Bekleyen Yorumlar</p>
            <span class="material-symbols-outlined text-orange-500">pending_actions</span>
        </div>
        <p class="text-[#111418] dark:text-white text-3xl font-bold">24</p>
        <div class="flex items-center gap-1">
            <span class="text-[#078838] dark:text-green-400 text-xs font-bold bg-green-50 dark:bg-green-900/20 px-1.5 py-0.5 rounded">+5%</span>
            <span class="text-[#617589] dark:text-[#94a3b8] text-xs">dünden beri</span>
        </div>
    </div>

    <div class="bg-white dark:bg-[#1a2632] flex flex-col gap-2 rounded-xl p-6 border border-[#e5e7eb] dark:border-[#2d3b4a] shadow-sm hover:shadow-md transition-shadow">
        <div class="flex justify-between items-start">
            <p class="text-[#617589] dark:text-[#94a3b8] text-sm font-medium">Onaylananlar</p>
            <span class="material-symbols-outlined text-primary">verified</span>
        </div>
        <p class="text-[#111418] dark:text-white text-3xl font-bold">1,240</p>
        <div class="flex items-center gap-1">
            <span class="text-[#078838] dark:text-green-400 text-xs font-bold bg-green-50 dark:bg-green-900/20 px-1.5 py-0.5 rounded">+12%</span>
            <span class="text-[#617589] dark:text-[#94a3b8] text-xs">bu ay</span>
        </div>
    </div>

    <div class="bg-white dark:bg-[#1a2632] flex flex-col gap-2 rounded-xl p-6 border border-[#e5e7eb] dark:border-[#2d3b4a] shadow-sm hover:shadow-md transition-shadow">
        <div class="flex justify-between items-start">
            <p class="text-[#617589] dark:text-[#94a3b8] text-sm font-medium">Spam/Engellenen</p>
            <span class="material-symbols-outlined text-red-500">report_gmailerrorred</span>
        </div>
        <p class="text-[#111418] dark:text-white text-3xl font-bold">12</p>
        <div class="flex items-center gap-1">
            <span class="text-[#e73908] dark:text-red-400 text-xs font-bold bg-red-50 dark:bg-red-900/20 px-1.5 py-0.5 rounded">-2%</span>
            <span class="text-[#617589] dark:text-[#94a3b8] text-xs">bu hafta</span>
        </div>
    </div>
</div>

<!-- Comments Table -->
<div class="bg-white dark:bg-[#1a2632] rounded-xl border border-[#e5e7eb] dark:border-[#2d3b4a] shadow-sm overflow-hidden">
    <div class="px-6 py-4 border-b border-[#f0f2f4] dark:border-[#2d3b4a] flex justify-between items-center">
        <h3 class="font-bold text-[#111418] dark:text-white">Moderasyon Kuyruğu</h3>
        <button class="text-sm font-bold text-primary hover:text-primary-dark transition-colors">Tümünü Onayla</button>
    </div>

    <div class="overflow-x-auto">
        <table class="w-full text-left">
            <thead class="bg-[#f8f9fa] dark:bg-[#1e293b]">
                <tr>
                    <th class="px-6 py-4 text-xs font-bold text-[#617589] dark:text-[#94a3b8] uppercase tracking-wider">Yazar</th>
                    <th class="px-6 py-4 text-xs font-bold text-[#617589] dark:text-[#94a3b8] uppercase tracking-wider">Yorum & Yazı</th>
                    <th class="px-6 py-4 text-xs font-bold text-[#617589] dark:text-[#94a3b8] uppercase tracking-wider">Tarih</th>
                    <th class="px-6 py-4 text-xs font-bold text-[#617589] dark:text-[#94a3b8] uppercase tracking-wider text-right">İşlemler</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-[#f0f2f4] dark:divide-[#2d3b4a]">
                <!-- Row 1 -->
                <tr class="hover:bg-[#f8f9fa] dark:hover:bg-[#1e293b] transition-colors">
                    <td class="px-6 py-5">
                        <div class="flex items-center gap-3">
                            <div class="size-9 rounded-full bg-primary/10 flex items-center justify-center text-primary font-bold text-sm">AY</div>
                            <div>
                                <p class="font-bold text-sm text-[#111418] dark:text-white">Ahmet Yılmaz</p>
                                <p class="text-xs text-[#617589] dark:text-[#94a3b8]">ahmet@example.com</p>
                            </div>
                        </div>
                    </td>
                    <td class="px-6 py-5">
                        <div class="max-w-md">
                            <p class="text-sm text-[#111418] dark:text-white line-clamp-2 italic mb-1">"Bu yazı çok öğretici olmuş, İSMEK eğitimleri sayesinde kendimi çok geliştirdim. Teşekkürler!"</p>
                            <div class="flex items-center gap-1 text-[11px] font-bold text-primary uppercase">
                                <span class="material-symbols-outlined text-[14px]">link</span>
                                <span>Web Tasarımında Renk Teorisi</span>
                            </div>
                        </div>
                    </td>
                    <td class="px-6 py-5">
                        <p class="text-sm text-[#617589] dark:text-[#94a3b8]">Bugün, 14:20</p>
                    </td>
                    <td class="px-6 py-5 text-right">
                        <div class="flex justify-end gap-2">
                            <button class="p-2 bg-green-50 dark:bg-green-900/20 text-green-600 dark:text-green-400 rounded-lg hover:bg-green-500 hover:text-white transition-all" title="Onayla">
                                <span class="material-symbols-outlined text-[20px]">check_circle</span>
                            </button>
                            <button class="p-2 bg-red-50 dark:bg-red-900/20 text-red-600 dark:text-red-400 rounded-lg hover:bg-red-500 hover:text-white transition-all" title="Sil">
                                <span class="material-symbols-outlined text-[20px]">delete</span>
                            </button>
                            <button class="p-2 bg-orange-50 dark:bg-orange-900/20 text-orange-600 dark:text-orange-400 rounded-lg hover:bg-orange-500 hover:text-white transition-all" title="Spam Olarak İşaretle">
                                <span class="material-symbols-outlined text-[20px]">report</span>
                            </button>
                        </div>
                    </td>
                </tr>

                <!-- Row 2 -->
                <tr class="hover:bg-[#f8f9fa] dark:hover:bg-[#1e293b] transition-colors">
                    <td class="px-6 py-5">
                        <div class="flex items-center gap-3">
                            <div class="size-9 rounded-full bg-purple-100 dark:bg-purple-900/30 flex items-center justify-center text-purple-600 dark:text-purple-400 font-bold text-sm">EA</div>
                            <div>
                                <p class="font-bold text-sm text-[#111418] dark:text-white">Elif Aksoy</p>
                                <p class="text-xs text-[#617589] dark:text-[#94a3b8]">elif.ak@testmail.com</p>
                            </div>
                        </div>
                    </td>
                    <td class="px-6 py-5">
                        <div class="max-w-md">
                            <p class="text-sm text-[#111418] dark:text-white line-clamp-2 italic mb-1">"Bir sonraki JavaScript kursu ne zaman açılacak? Bilgi verebilir misiniz?"</p>
                            <div class="flex items-center gap-1 text-[11px] font-bold text-primary uppercase">
                                <span class="material-symbols-outlined text-[14px]">link</span>
                                <span>2024 Eğitim Takvimi Hakkında</span>
                            </div>
                        </div>
                    </td>
                    <td class="px-6 py-5">
                        <p class="text-sm text-[#617589] dark:text-[#94a3b8]">Dün, 09:45</p>
                    </td>
                    <td class="px-6 py-5 text-right">
                        <div class="flex justify-end gap-2">
                            <button class="p-2 bg-green-50 dark:bg-green-900/20 text-green-600 dark:text-green-400 rounded-lg hover:bg-green-500 hover:text-white transition-all">
                                <span class="material-symbols-outlined text-[20px]">check_circle</span>
                            </button>
                            <button class="p-2 bg-red-50 dark:bg-red-900/20 text-red-600 dark:text-red-400 rounded-lg hover:bg-red-500 hover:text-white transition-all">
                                <span class="material-symbols-outlined text-[20px]">delete</span>
                            </button>
                            <button class="p-2 bg-orange-50 dark:bg-orange-900/20 text-orange-600 dark:text-orange-400 rounded-lg hover:bg-orange-500 hover:text-white transition-all">
                                <span class="material-symbols-outlined text-[20px]">report</span>
                            </button>
                        </div>
                    </td>
                </tr>

                <!-- Row 3 -->
                <tr class="hover:bg-[#f8f9fa] dark:hover:bg-[#1e293b] transition-colors">
                    <td class="px-6 py-5">
                        <div class="flex items-center gap-3">
                            <div class="size-9 rounded-full bg-amber-100 dark:bg-amber-900/30 flex items-center justify-center text-amber-600 dark:text-amber-400 font-bold text-sm">MC</div>
                            <div>
                                <p class="font-bold text-sm text-[#111418] dark:text-white">Mehmet Can</p>
                                <p class="text-xs text-[#617589] dark:text-[#94a3b8]">mcan@mail.com</p>
                            </div>
                        </div>
                    </td>
                    <td class="px-6 py-5">
                        <div class="max-w-md">
                            <p class="text-sm text-[#111418] dark:text-white line-clamp-2 italic mb-1">"Linkler çalışmıyor, kontrol eder misiniz?"</p>
                            <div class="flex items-center gap-1 text-[11px] font-bold text-primary uppercase">
                                <span class="material-symbols-outlined text-[14px]">link</span>
                                <span>Ücretsiz Tasarım Kaynakları</span>
                            </div>
                        </div>
                    </td>
                    <td class="px-6 py-5">
                        <p class="text-sm text-[#617589] dark:text-[#94a3b8]">20 May 2024</p>
                    </td>
                    <td class="px-6 py-5 text-right">
                        <div class="flex justify-end gap-2">
                            <button class="p-2 bg-green-50 dark:bg-green-900/20 text-green-600 dark:text-green-400 rounded-lg hover:bg-green-500 hover:text-white transition-all">
                                <span class="material-symbols-outlined text-[20px]">check_circle</span>
                            </button>
                            <button class="p-2 bg-red-50 dark:bg-red-900/20 text-red-600 dark:text-red-400 rounded-lg hover:bg-red-500 hover:text-white transition-all">
                                <span class="material-symbols-outlined text-[20px]">delete</span>
                            </button>
                            <button class="p-2 bg-orange-50 dark:bg-orange-900/20 text-orange-600 dark:text-orange-400 rounded-lg hover:bg-orange-500 hover:text-white transition-all">
                                <span class="material-symbols-outlined text-[20px]">report</span>
                            </button>
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    <!-- Pagination -->
    <div class="px-6 py-4 border-t border-[#f0f2f4] dark:border-[#2d3b4a] flex flex-col sm:flex-row items-center justify-between gap-4">
        <p class="text-sm text-[#617589] dark:text-[#94a3b8]">Toplam 24 bekleyen yorumdan 1-10 arası gösteriliyor</p>
        <div class="flex items-center gap-1">
            <button class="p-2 border border-[#e5e7eb] dark:border-[#2d3b4a] rounded-lg text-[#617589] dark:text-[#94a3b8] hover:bg-[#f0f2f4] dark:hover:bg-[#24303c] disabled:opacity-50 transition-colors" disabled>
                <span class="material-symbols-outlined text-[20px]">chevron_left</span>
            </button>
            <button class="px-3.5 py-1.5 bg-primary text-white rounded-lg text-sm font-bold">1</button>
            <button class="px-3.5 py-1.5 border border-[#e5e7eb] dark:border-[#2d3b4a] dark:text-white rounded-lg text-sm font-medium hover:bg-[#f0f2f4] dark:hover:bg-[#24303c] transition-colors">2</button>
            <button class="px-3.5 py-1.5 border border-[#e5e7eb] dark:border-[#2d3b4a] dark:text-white rounded-lg text-sm font-medium hover:bg-[#f0f2f4] dark:hover:bg-[#24303c] transition-colors">3</button>
            <button class="p-2 border border-[#e5e7eb] dark:border-[#2d3b4a] rounded-lg text-[#617589] dark:text-[#94a3b8] hover:bg-[#f0f2f4] dark:hover:bg-[#24303c] transition-colors">
                <span class="material-symbols-outlined text-[20px]">chevron_right</span>
            </button>
        </div>
    </div>
</div>