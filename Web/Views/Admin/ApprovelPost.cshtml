@{
    ViewBag.Title = "- Blog Onay";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- Page Header -->
<div class="flex flex-col gap-2 mb-6">
    <div class="flex items-center gap-2 text-sm">
        <a class="text-[#617589] dark:text-[#94a3b8] hover:text-primary transition-colors" href="@Url.Action("Index", "Admin")">Yönetici</a>
        <span class="text-[#617589] dark:text-[#94a3b8]">/</span>
        <span class="text-[#111418] dark:text-white font-medium">Blog Onay Sistemi</span>
    </div>
    <div class="flex flex-col lg:flex-row justify-between items-start lg:items-end gap-4">
        <div>
            <h1 class="text-[#111418] dark:text-white text-3xl font-bold">Blog Onay Sistemi</h1>
            <p class="text-[#617589] dark:text-[#94a3b8] mt-1">Yazarlar tarafından gönderilen ve inceleme bekleyen içerikler.</p>
        </div>
        <div class="flex gap-3 w-full lg:w-auto">
            <button class="flex flex-1 lg:flex-none items-center justify-center gap-2 rounded-lg h-10 px-4 bg-white dark:bg-[#1a2632] border border-[#e5e7eb] dark:border-[#2d3b4a] text-[#111418] dark:text-white text-sm font-medium hover:bg-[#f0f2f4] dark:hover:bg-[#24303c] transition-colors">
                <span class="material-symbols-outlined text-[18px]">filter_list</span>
                <span>Filtrele</span>
            </button>
            <button class="flex flex-1 lg:flex-none items-center justify-center gap-2 rounded-lg h-10 px-4 bg-primary text-white text-sm font-bold shadow-lg shadow-primary/20 hover:bg-primary-dark transition-all hover:scale-[1.02]">
                <span class="material-symbols-outlined text-[18px]">check_circle</span>
                <span>Tümünü Onayla</span>
            </button>
        </div>
    </div>
</div>

<!-- Stats Cards -->
<div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
    <div class="bg-white dark:bg-[#1a2632] flex flex-col gap-2 rounded-xl p-6 border border-[#e5e7eb] dark:border-[#2d3b4a] shadow-sm hover:shadow-md transition-shadow">
        <p class="text-[#617589] dark:text-[#94a3b8] text-sm font-medium">Onay Bekleyen</p>
        <div class="flex items-baseline justify-between">
            <p class="text-[#111418] dark:text-white text-3xl font-bold">24</p>
            <span class="text-[#078838] dark:text-green-400 bg-green-50 dark:bg-green-900/20 px-2 py-0.5 rounded text-xs font-bold">+15%</span>
        </div>
    </div>

    <div class="bg-white dark:bg-[#1a2632] flex flex-col gap-2 rounded-xl p-6 border border-[#e5e7eb] dark:border-[#2d3b4a] shadow-sm hover:shadow-md transition-shadow">
        <p class="text-[#617589] dark:text-[#94a3b8] text-sm font-medium">Bugün Gelen</p>
        <div class="flex items-baseline justify-between">
            <p class="text-[#111418] dark:text-white text-3xl font-bold">8</p>
            <span class="text-[#078838] dark:text-green-400 bg-green-50 dark:bg-green-900/20 px-2 py-0.5 rounded text-xs font-bold">+5%</span>
        </div>
    </div>

    <div class="bg-white dark:bg-[#1a2632] flex flex-col gap-2 rounded-xl p-6 border border-[#e5e7eb] dark:border-[#2d3b4a] shadow-sm hover:shadow-md transition-shadow">
        <p class="text-[#617589] dark:text-[#94a3b8] text-sm font-medium">Reddedilen (Aylık)</p>
        <div class="flex items-baseline justify-between">
            <p class="text-[#111418] dark:text-white text-3xl font-bold">12</p>
            <span class="text-[#e73908] dark:text-red-400 bg-red-50 dark:bg-red-900/20 px-2 py-0.5 rounded text-xs font-bold">-2%</span>
        </div>
    </div>
</div>

<!-- Blog Posts Table -->
<div class="bg-white dark:bg-[#1a2632] rounded-xl border border-[#e5e7eb] dark:border-[#2d3b4a] shadow-sm overflow-hidden mb-8">
    <div class="overflow-x-auto">
        <table class="w-full text-left">
