@{
    ViewBag.Title = "- Dashboard";
    ViewBag.UserName = "Kaan Tetik";
    ViewBag.UserRole = "Süper Yönetici";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- Welcome Section -->
<div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4">
    <div>
        <h2 class="text-2xl font-bold tracking-tight text-[#111418] dark:text-white">Hoşgeldiniz, @ViewBag.UserName</h2>
        <p class="text-[#617589] dark:text-[#94a3b8] text-sm mt-1">İSMEK BLOG yönetici paneline genel bakış.</p>
    </div>
    <div class="flex gap-3">
        <button class="flex items-center gap-2 px-4 py-2 bg-white dark:bg-[#1a2632] border border-[#e5e7eb] dark:border-[#2d3b4a] rounded-lg text-sm font-bold text-[#111418] dark:text-white hover:bg-gray-50 dark:hover:bg-[#24303c] transition-colors shadow-sm">
            <span class="material-symbols-outlined text-[18px]">download</span>
            Rapor Al
        </button>
        <button class="flex items-center gap-2 px-4 py-2 bg-primary text-white rounded-lg text-sm font-bold shadow-md shadow-primary/20 hover:bg-blue-600 transition-colors">
            <span class="material-symbols-outlined text-[18px]">add</span>
            Yeni Gönderi
        </button>
    </div>
</div>

<!-- Stats Grid -->
<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
    <!-- Stat Card 1 -->
    <div class="bg-white dark:bg-[#1a2632] p-5 rounded-xl border border-[#f0f2f4] dark:border-[#2d3b4a] shadow-sm flex items-start justify-between">
        <div class="flex flex-col gap-1">
            <p class="text-[#617589] dark:text-[#94a3b8] text-sm font-medium">Toplam Gönderi</p>
            <h3 class="text-2xl font-bold text-[#111418] dark:text-white">124</h3>
            <p class="text-emerald-600 text-xs font-semibold flex items-center gap-1 mt-1">
                <span class="material-symbols-outlined text-[16px]">trending_up</span>
                +5% Geçen Hafta
            </p>
        </div>
        <div class="bg-blue-50 dark:bg-blue-900/20 text-blue-600 dark:text-blue-400 p-2.5 rounded-lg">
            <span class="material-symbols-outlined">article</span>
        </div>
    </div>

    <!-- Stat Card 2 -->
    <div class="bg-white dark:bg-[#1a2632] p-5 rounded-xl border border-[#f0f2f4] dark:border-[#2d3b4a] shadow-sm flex items-start justify-between">
        <div class="flex flex-col gap-1">
            <p class="text-[#617589] dark:text-[#94a3b8] text-sm font-medium">Aktif Kullanıcılar</p>
            <h3 class="text-2xl font-bold text-[#111418] dark:text-white">856</h3>
            <p class="text-emerald-600 text-xs font-semibold flex items-center gap-1 mt-1">
                <span class="material-symbols-outlined text-[16px]">trending_up</span>
                +12% Geçen Ay
            </p>
        </div>
        <div class="bg-purple-50 dark:bg-purple-900/20 text-purple-600 dark:text-purple-400 p-2.5 rounded-lg">
            <span class="material-symbols-outlined">group</span>
        </div>
    </div>

    <!-- Stat Card 3 -->
    <div class="bg-white dark:bg-[#1a2632] p-5 rounded-xl border border-[#f0f2f4] dark:border-[#2d3b4a] shadow-sm flex items-start justify-between">
        <div class="flex flex-col gap-1">
            <p class="text-[#617589] dark:text-[#94a3b8] text-sm font-medium">Bekleyen Yorumlar</p>
            <h3 class="text-2xl font-bold text-[#111418] dark:text-white">12</h3>
            <p class="text-rose-600 text-xs font-semibold flex items-center gap-1 mt-1">
                <span class="material-symbols-outlined text-[16px]">priority_high</span>
                İnceleme Gerekli
            </p>
        </div>
        <div class="bg-orange-50 dark:bg-orange-900/20 text-orange-600 dark:text-orange-400 p-2.5 rounded-lg">
            <span class="material-symbols-outlined">chat</span>
        </div>
    </div>

    <!-- Stat Card 4 -->
    <div class="bg-white dark:bg-[#1a2632] p-5 rounded-xl border border-[#f0f2f4] dark:border-[#2d3b4a] shadow-sm flex items-start justify-between">
        <div class="flex flex-col gap-1">
            <p class="text-[#617589] dark:text-[#94a3b8] text-sm font-medium">Toplam Görüntülenme</p>
            <h3 class="text-2xl font-bold text-[#111418] dark:text-white">45.2K</h3>
            <p class="text-emerald-600 text-xs font-semibold flex items-center gap-1 mt-1">
                <span class="material-symbols-outlined text-[16px]">trending_up</span>
                +8% Ortalama
            </p>
        </div>
        <div class="bg-green-50 dark:bg-green-900/20 text-green-600 dark:text-green-400 p-2.5 rounded-lg">
            <span class="material-symbols-outlined">visibility</span>
        </div>
    </div>
</div>

<!-- Content Area -->
<div class="grid grid-cols-1 xl:grid-cols-3 gap-6">

    <!-- Recent Posts Table -->
    <div class="xl:col-span-2 flex flex-col bg-white dark:bg-[#1a2632] border border-[#f0f2f4] dark:border-[#2d3b4a] rounded-xl shadow-sm overflow-hidden">
        <div class="px-6 py-4 border-b border-[#f0f2f4] dark:border-[#2d3b4a] flex items-center justify-between">
            <h3 class="text-lg font-bold text-[#111418] dark:text-white">Son Gönderiler</h3>
            <a class="text-sm font-medium text-primary hover:text-blue-700 transition-colors" href="#">Tümünü Gör</a>
        </div>

        <div class="overflow-x-auto">
            <table class="w-full text-left border-collapse">
                <thead>
                    <tr class="bg-[#f8f9fa] dark:bg-[#24303c] text-[#617589] dark:text-[#94a3b8] text-xs uppercase tracking-wider font-semibold">
                        <th class="px-6 py-3">Başlık</th>
                        <th class="px-6 py-3">Kategori</th>
                        <th class="px-6 py-3">Yazar</th>
                        <th class="px-6 py-3">Durum</th>
                        <th class="px-6 py-3 text-right">İşlem</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-[#f0f2f4] dark:divide-[#2d3b4a]">
                    <tr class="hover:bg-gray-50 dark:hover:bg-[#24303c]/50 transition-colors group">
                        <td class="px-6 py-4">
                            <p class="text-sm font-medium text-[#111418] dark:text-white line-clamp-1">Web Geliştirmede Modern Trendler</p>
                        </td>
                        <td class="px-6 py-4">
                            <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-blue-100 text-blue-800 dark:bg-blue-900/30 dark:text-blue-300">
                                Teknoloji
                            </span>
                        </td>
                        <td class="px-6 py-4">
                            <div class="flex items-center gap-2">
                                <div class="size-6 rounded-full bg-cover bg-center" style='background-image: url("https://ui-avatars.com/api/?name=Ali+Yilmaz&background=137fec&color=fff");'></div>
                                <span class="text-sm text-[#111418] dark:text-gray-300">Ali Yılmaz</span>
                            </div>
                        </td>
                        <td class="px-6 py-4">
                            <span class="inline-flex items-center gap-1.5 px-2.5 py-0.5 rounded-full text-xs font-medium bg-emerald-100 text-emerald-800 dark:bg-emerald-900/30 dark:text-emerald-300">
                                <span class="size-1.5 rounded-full bg-emerald-500"></span>
                                Yayında
                            </span>
                        </td>
                        <td class="px-6 py-4 text-right">
                            <div class="flex items-center justify-end gap-2 opacity-0 group-hover:opacity-100 transition-opacity">
                                <button class="p-1 text-gray-400 hover:text-primary transition-colors">
                                    <span class="material-symbols-outlined text-[18px]">edit</span>
                                </button>
                                <button class="p-1 text-gray-400 hover:text-red-500 transition-colors">
                                    <span class="material-symbols-outlined text-[18px]">delete</span>
                                </button>
                            </div>
                        </td>
                    </tr>

                    <tr class="hover:bg-gray-50 dark:hover:bg-[#24303c]/50 transition-colors group">
                        <td class="px-6 py-4">
                            <p class="text-sm font-medium text-[#111418] dark:text-white line-clamp-1">MVC Mimarisi Nedir?</p>
                        </td>
                        <td class="px-6 py-4">
                            <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-purple-100 text-purple-800 dark:bg-purple-900/30 dark:text-purple-300">
                                Yazılım
                            </span>
                        </td>
                        <td class="px-6 py-4">
                            <div class="flex items-center gap-2">
                                <div class="size-6 rounded-full bg-cover bg-center" style='background-image: url("https://ui-avatars.com/api/?name=Ayse+Demir&background=9333ea&color=fff");'></div>
                                <span class="text-sm text-[#111418] dark:text-gray-300">Ayşe Demir</span>
                            </div>
                        </td>
                        <td class="px-6 py-4">
                            <span class="inline-flex items-center gap-1.5 px-2.5 py-0.5 rounded-full text-xs font-medium bg-amber-100 text-amber-800 dark:bg-amber-900/30 dark:text-amber-300">
                                <span class="size-1.5 rounded-full bg-amber-500"></span>
                                Taslak
                            </span>
                        </td>
                        <td class="px-6 py-4 text-right">
                            <div class="flex items-center justify-end gap-2 opacity-0 group-hover:opacity-100 transition-opacity">
                                <button class="p-1 text-gray-400 hover:text-primary transition-colors">
                                    <span class="material-symbols-outlined text-[18px]">edit</span>
                                </button>
                                <button class="p-1 text-gray-400 hover:text-red-500 transition-colors">
                                    <span class="material-symbols-outlined text-[18px]">delete</span>
                                </button>
                            </div>
                        </td>
                    </tr>

                    <tr class="hover:bg-gray-50 dark:hover:bg-[#24303c]/50 transition-colors group">
                        <td class="px-6 py-4">
                            <p class="text-sm font-medium text-[#111418] dark:text-white line-clamp-1">CSS Grid vs Flexbox</p>
                        </td>
                        <td class="px-6 py-4">
                            <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-pink-100 text-pink-800 dark:bg-pink-900/30 dark:text-pink-300">
                                Tasarım
                            </span>
                        </td>
                        <td class="px-6 py-4">
                            <div class="flex items-center gap-2">
                                <div class="size-6 rounded-full bg-cover bg-center" style='background-image: url("https://ui-avatars.com/api/?name=Mehmet+Kaya&background=ec4899&color=fff");'></div>
                                <span class="text-sm text-[#111418] dark:text-gray-300">Mehmet Kaya</span>
                            </div>
                        </td>
                        <td class="px-6 py-4">
                            <span class="inline-flex items-center gap-1.5 px-2.5 py-0.5 rounded-full text-xs font-medium bg-emerald-100 text-emerald-800 dark:bg-emerald-900/30 dark:text-emerald-300">
                                <span class="size-1.5 rounded-full bg-emerald-500"></span>
                                Yayında
                            </span>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

