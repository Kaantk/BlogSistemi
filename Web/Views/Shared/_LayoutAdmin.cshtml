<!DOCTYPE html>
<html class="light" lang="tr">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>Yönetici Paneli @ViewBag.Title</title>

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com" rel="preconnect" />
    <link crossorigin="" href="https://fonts.gstatic.com" rel="preconnect" />
    <link href="https://fonts.googleapis.com/css2?family=Work+Sans:wght@300;400;500;600;700&display=swap" rel="stylesheet" />

    <!-- Material Symbols -->
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&display=swap" rel="stylesheet" />

    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>

    <!-- Theme Configuration -->
    <script id="tailwind-config">
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        "primary": "#137fec",
                        "primary-dark": "#0e5fb1",
                        "background-light": "#f6f7f8",
                        "background-dark": "#101922",
                    },
                    fontFamily: {
                        "display": ["Work Sans", "sans-serif"]
                    },
                    borderRadius: {
                        "DEFAULT": "0.25rem",
                        "lg": "0.5rem",
                        "xl": "0.75rem",
                        "full": "9999px"
                    },
                },
            },
        }
    </script>

    <style type="text/tailwindcss">
        .material-symbols-outlined {
            font-size: 24px;
            font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 24;
        }

            .material-symbols-outlined.fill {
                font-variation-settings: 'FILL' 1;
            }

        ::-webkit-scrollbar {
            width: 6px;
            height: 6px;
        }

        ::-webkit-scrollbar-track {
            background: transparent;
        }

        ::-webkit-scrollbar-thumb {
            background: #cbd5e1;
            border-radius: 3px;
        }

            ::-webkit-scrollbar-thumb:hover {
                background: #94a3b8;
            }

        :root {
            --primary-color: #137fec;
        }
    </style>

    @RenderSection("Styles", required: false)
</head>
<body class="bg-background-light dark:bg-background-dark font-display text-[#111418] dark:text-white h-screen overflow-hidden flex">

    <!-- Sidebar -->
    <aside class="w-64 bg-white dark:bg-[#1a2632] border-r border-[#e5e7eb] dark:border-[#2d3b4a] flex flex-col shrink-0 transition-all duration-300">

        <!-- Logo Area -->
        <div class="h-16 flex items-center gap-3 px-6 border-b border-[#f0f2f4] dark:border-[#2d3b4a]">
            <div class="bg-primary/10 rounded-lg p-1.5 text-primary">
                <span class="material-symbols-outlined fill">grid_view</span>
            </div>
            <div class="flex flex-col">
                <h1 class="text-base font-bold leading-none tracking-tight">İSMEK BLOG</h1>
                <p class="text-[#617589] dark:text-[#94a3b8] text-[10px] font-normal mt-1 uppercase tracking-wider">Yönetici Paneli</p>
            </div>
        </div>

        <!-- Navigation -->
        <nav class="flex-1 overflow-y-auto py-4 px-3 flex flex-col gap-1">
            <a class="flex items-center gap-3 px-3 py-2.5 rounded-lg bg-primary text-white group transition-colors"
               href="@Url.Action("Index", "Admin")">
                <span class="material-symbols-outlined fill text-[20px]">dashboard</span>
                <span class="text-sm font-medium">Dashboard</span>
            </a>

            <p class="px-3 mt-4 mb-2 text-xs font-semibold text-[#617589] dark:text-[#94a3b8] uppercase tracking-wider">Kullanıcı İşlemleri</p>

            <a class="flex items-center gap-3 px-3 py-2.5 rounded-lg text-[#111418] dark:text-slate-300 hover:bg-[#f0f2f4] dark:hover:bg-[#2d3b4a] transition-colors group"
               href="@Url.Action("Users", "Admin")">
                <span class="material-symbols-outlined text-[20px] text-[#617589] dark:text-[#94a3b8] group-hover:text-primary transition-colors">group</span>
                <span class="text-sm font-medium">Kullanıcı Yönetimi</span>
            </a>

            <a class="flex items-center gap-3 px-3 py-2.5 rounded-lg text-[#111418] dark:text-slate-300 hover:bg-[#f0f2f4] dark:hover:bg-[#2d3b4a] transition-colors group"
               href="@Url.Action("Roles", "Admin")">
                <span class="material-symbols-outlined text-[20px] text-[#617589] dark:text-[#94a3b8] group-hover:text-primary transition-colors">verified_user</span>
                <span class="text-sm font-medium">Rol Yönetimi</span>
            </a>
                    
            <p class="px-3 mt-4 mb-2 text-xs font-semibold text-[#617589] dark:text-[#94a3b8] uppercase tracking-wider">İçerik Denetimi</p>

            <a class="flex items-center gap-3 px-3 py-2.5 rounded-lg text-[#111418] dark:text-slate-300 hover:bg-[#f0f2f4] dark:hover:bg-[#2d3b4a] transition-colors group"
               href="@Url.Action("ApprovelPost", "Admin")">
                <span class="material-symbols-outlined text-[20px] text-[#617589] dark:text-[#94a3b8] group-hover:text-primary transition-colors">fact_check</span>
                <span class="text-sm font-medium">Blog Onay Sistemi</span>
                <span class="ml-auto bg-amber-500 text-white text-[10px] font-bold px-1.5 py-0.5 rounded-full">8</span>
            </a>

            <a class="flex items-center gap-3 px-3 py-2.5 rounded-lg text-[#111418] dark:text-slate-300 hover:bg-[#f0f2f4] dark:hover:bg-[#2d3b4a] transition-colors group"
               href="@Url.Action("Categories", "Admin")">
                <span class="material-symbols-outlined text-[20px] text-[#617589] dark:text-[#94a3b8] group-hover:text-primary transition-colors">category</span>
                <span class="text-sm font-medium">Kategori Yönetimi</span>
            </a>

            <a class="flex items-center gap-3 px-3 py-2.5 rounded-lg text-[#111418] dark:text-slate-300 hover:bg-[#f0f2f4] dark:hover:bg-[#2d3b4a] transition-colors group"
               href="@Url.Action("ApprovelComment", "Admin")">
                <span class="material-symbols-outlined text-[20px] text-[#617589] dark:text-[#94a3b8] group-hover:text-primary transition-colors">comment_bank</span>
                <span class="text-sm font-medium">Yorum Onay Sistemi</span>
                <span class="ml-auto bg-red-500 text-white text-[10px] font-bold px-1.5 py-0.5 rounded-full">12</span>
            </a>

            <p class="px-3 mt-4 mb-2 text-xs font-semibold text-[#617589] dark:text-[#94a3b8] uppercase tracking-wider">Yapılandırma</p>

            <a class="flex items-center gap-3 px-3 py-2.5 rounded-lg text-[#111418] dark:text-slate-300 hover:bg-[#f0f2f4] dark:hover:bg-[#2d3b4a] transition-colors group"
               href="@Url.Action("WebsiteSettings", "Admin")">
                <span class="material-symbols-outlined text-[20px] text-[#617589] dark:text-[#94a3b8] group-hover:text-primary transition-colors">settings</span>
                <span class="text-sm font-medium">Site Ayarları</span>
            </a>

            <a class="flex items-center gap-3 px-3 py-2.5 rounded-lg text-red-500 hover:bg-red-50 dark:hover:bg-red-900/10 transition-colors group mt-auto"
               href="@Url.Action("Logout", "Auth")">
                <span class="material-symbols-outlined text-[20px]">logout</span>
                <span class="text-sm font-medium">Güvenli Çıkış</span>
            </a>
        </nav>
    </aside>

    <!-- Main Content Area -->
    <main class="flex-1 flex flex-col h-full overflow-hidden bg-background-light dark:bg-background-dark relative">

        <!-- Header -->
        <header class="h-16 bg-white dark:bg-[#1a2632] border-b border-[#f0f2f4] dark:border-[#2d3b4a] flex items-center justify-between px-6 shrink-0 z-10">

            <!-- Search -->
            <div class="flex items-center w-full max-w-md">
                <div class="relative w-full">
                    <span class="absolute left-3 top-1/2 -translate-y-1/2 text-[#617589] dark:text-[#94a3b8]">
                        <span class="material-symbols-outlined text-[20px]">search</span>
                    </span>
                    <input class="w-full pl-10 pr-4 py-2 bg-[#f0f2f4] dark:bg-[#24303c] dark:text-white border-none rounded-lg text-sm focus:ring-2 focus:ring-primary/50 placeholder:text-[#617589] dark:placeholder:text-[#64748b]"
                           placeholder="Hızlı ara..."
                           type="text" />
                </div>
            </div>

            <!-- Right Actions -->
            <div class="flex items-center gap-4">
                <!-- Notifications -->
                <button class="relative p-2 text-[#617589] dark:text-[#94a3b8] hover:bg-[#f0f2f4] dark:hover:bg-[#2d3b4a] rounded-lg transition-colors">
                    <span class="material-symbols-outlined text-[22px]">notifications</span>
                    <span class="absolute top-1.5 right-1.5 size-2 bg-red-500 rounded-full border-2 border-white dark:border-[#1a2632]"></span>
                </button>

                <!-- Profile -->
                <div class="flex items-center gap-3 pl-4 border-l border-[#f0f2f4] dark:border-[#2d3b4a]">
                    <div class="text-right hidden sm:block">
                        <p class="text-sm font-bold text-[#111418] dark:text-white leading-tight">@ViewBag.UserName</p>
                        <p class="text-xs text-[#617589] dark:text-[#94a3b8]">@ViewBag.UserRole</p>
                    </div>
                    <button class="relative group">
                        <div class="size-9 rounded-full bg-cover bg-center border-2 border-white dark:border-[#2d3b4a] shadow-sm ring-2 ring-transparent group-hover:ring-primary/20 transition-all"
                             data-alt="User avatar for @ViewBag.UserName"
                             style='background-image: url("https://lh3.googleusercontent.com/aida-public/AB6AXuBSeFnOAbhfvUpEJ6saEB9OKYR9TYjKUyBhDVwQAoH9F9QLpbdUPlGgdZRdkaTJGABVr0EbA5DDN5plOTCPFGRphiuM19chV9pNg-7DciC6K5vd31gBO1kpRuH-BmQ-QOCkTL31SIhniStU0D205ZX7afOfTnXouktny9IpJlU28T8Tx7EsqVXm4iza65fEzw8kWqDTZKJxQSRGfS-mWrExgHeY1IxkxWS4d_EEv6yVKVoTV84aWLI81q9h82kTIAAv5RBsaYw8Y9c");'>
                        </div>
                    </button>
                </div>
            </div>
        </header>

        <!-- Scrollable Content -->
        <div class="flex-1 overflow-y-auto p-6 md:p-8 scroll-smooth">
            <div class="max-w-[1200px] mx-auto flex flex-col gap-8">
                @RenderBody()

                <!-- Footer -->
                <footer class="mt-auto py-8 text-center border-t border-[#f0f2f4] dark:border-[#2d3b4a]">
                    <p class="text-xs text-[#617589] dark:text-[#94a3b8] font-medium">© @DateTime.Now.Year İSMEK BLOG - Yönetici Paneli</p>
                    <p class="text-[10px] text-[#94a3b8] mt-1 italic">Kaan Tetik tarafından yazılmıştır.</p>
                </footer>
            </div>
        </div>
    </main>

    @RenderSection("Scripts", required: false)
</body>
</html>