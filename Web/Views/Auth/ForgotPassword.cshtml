@using Web.Models.Auth.Request

@model ForgotPasswordViewModel

@{
    ViewBag.Title = "Şifremi Unuttum";
    Layout = "~/Views/Shared/_LayoutPublic.cshtml";
}

<main class="flex-grow flex items-center justify-center px-4 py-12 md:py-16">
    <div class="w-full max-w-[480px] bg-surface-light dark:bg-surface-dark rounded-xl shadow-xl border border-gray-200 dark:border-gray-700 p-8 md:p-10">

        <!-- Icon / Brand Visual -->
        <div class="flex justify-center mb-6">
            <div class="size-16 bg-primary/10 rounded-full flex items-center justify-center text-primary">
                <span class="material-symbols-outlined !text-4xl">lock_reset</span>
            </div>
        </div>

        <!-- Headline Section -->
        <div class="text-center mb-8">
            <h1 class="text-gray-900 dark:text-white text-[28px] font-bold leading-tight mb-3">
                Şifrenizi mi Unuttunuz?
            </h1>
            <p class="text-gray-600 dark:text-gray-400 text-base leading-relaxed">
                E-posta adresinizi girin, size şifrenizi sıfırlamanız için bir bağlantı gönderelim.
            </p>
        </div>

        @if (ViewBag.SuccessMessage != null)
        {
            <!-- Success Alert -->
            <div class="mb-6 bg-green-50 dark:bg-green-900/20 border border-green-200 dark:border-green-800 rounded-lg p-4 flex items-start gap-3">
                <span class="material-symbols-outlined text-green-600 dark:text-green-400 text-xl">check_circle</span>
                <div>
                    <p class="text-sm font-semibold text-green-800 dark:text-green-200">Başarılı!</p>
                    <p class="text-sm text-green-700 dark:text-green-300 mt-1">@ViewBag.SuccessMessage</p>
                </div>
            </div>
        }

        @if (ViewBag.ErrorMessage != null)
        {
            <!-- Error Alert -->
            <div class="mb-6 bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-lg p-4 flex items-start gap-3">
                <span class="material-symbols-outlined text-red-600 dark:text-red-400 text-xl">error</span>
                <div>
                    <p class="text-sm font-semibold text-red-800 dark:text-red-200">Hata!</p>
                    <p class="text-sm text-red-700 dark:text-red-300 mt-1">@ViewBag.ErrorMessage</p>
                </div>
            </div>
        }

        <!-- Form Section -->
        <form asp-action="ForgotPassword" asp-controller="Auth" method="post" class="space-y-6">
            <div class="flex flex-col gap-2">
                <label class="flex flex-col w-full">
                    <p class="text-gray-900 dark:text-white text-sm font-semibold leading-normal mb-2">
                        E-posta Adresi
                    </p>
                    <div class="relative flex w-full items-stretch rounded-lg group">
                        <input asp-for="Email"
                               class="form-input flex w-full min-w-0 flex-1 rounded-lg text-gray-900 dark:text-white focus:outline-0 focus:ring-2 focus:ring-primary/20 border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 focus:border-primary h-14 placeholder:text-gray-500 dark:placeholder:text-gray-400 p-[15px] pr-12 text-base font-normal leading-normal transition-all"
                               placeholder="ornek@eposta.com"
                               type="email" />
                        <div class="absolute right-4 top-1/2 -translate-y-1/2 text-gray-400 group-focus-within:text-primary transition-colors">
                            <span class="material-symbols-outlined">mail</span>
                        </div>
                    </div>
                    <span asp-validation-for="Email" class="text-xs text-red-600 dark:text-red-400 mt-1"></span>
                </label>
            </div>

            <!-- Primary Action Button -->
            <div class="pt-2">
                <button type="submit"
                        class="w-full flex cursor-pointer items-center justify-center overflow-hidden rounded-lg h-12 px-5 bg-primary hover:bg-primary-dark text-white text-base font-bold leading-normal transition-all shadow-lg shadow-primary/20 transform hover:scale-[1.02]">
                    <span class="truncate">Sıfırlama Bağlantısı Gönder</span>
                </button>
            </div>
        </form>

        <!-- Back to Login -->
        <div class="mt-8 pt-6 border-t border-gray-200 dark:border-gray-700 text-center">
            <a class="inline-flex items-center gap-2 text-sm font-semibold text-primary hover:underline group"
               href="@Url.Action("Login", "Auth")">
                <span class="material-symbols-outlined text-sm group-hover:-translate-x-1 transition-transform">arrow_back</span>
                Giriş Sayfasına Geri Dön
            </a>
        </div>

        <!-- Additional Help Text -->
        <div class="mt-6 bg-blue-50 dark:bg-blue-900/10 border border-blue-200 dark:border-blue-800 rounded-lg p-4">
            <div class="flex items-start gap-3">
                <span class="material-symbols-outlined text-blue-600 dark:text-blue-400 text-xl">info</span>
                <div>
                    <p class="text-xs text-blue-800 dark:text-blue-200 font-semibold mb-1">Bilgi</p>
                    <p class="text-xs text-blue-700 dark:text-blue-300">
                        E-posta gelmedi mi? Spam klasörünüzü kontrol edin veya birkaç dakika bekleyin.
                        Sorun devam ederse, <a href="@Url.Action("Contact", "Home")" class="underline font-semibold">iletişim</a> sayfamızdan bize ulaşın.
                    </p>
                </div>
            </div>
        </div>
    </div>
</main>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}