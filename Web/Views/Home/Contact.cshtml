@using Web.Models.ViewModels.Home

@model ContactViewModel

@{
    ViewBag.Title = "İletişim";
    Layout = "~/Views/Shared/_LayoutPublic.cshtml";
}

<div class="container mx-auto px-4 lg:px-8 py-8">

    <!-- Header Image Section -->
    <div class="bg-cover bg-center flex flex-col justify-end overflow-hidden bg-primary/10 rounded-2xl min-h-[280px] shadow-lg relative group mb-12"
         style='background-image: linear-gradient(0deg, rgba(19, 127, 236, 0.6) 0%, rgba(0, 0, 0, 0) 50%), url("https://images.unsplash.com/photo-1423666639041-f56000c27a9a?w=1200");'>
        <div class="flex p-8 md:p-12 flex-col gap-2">
            <h1 class="text-white text-4xl md:text-5xl font-black leading-tight drop-shadow-lg">
                Bizimle İletişime Geçin
            </h1>
            <p class="text-white/90 text-lg md:text-xl max-w-2xl font-light">
                Sorularınız, önerileriniz veya işbirliği talepleriniz için her zaman buradayız.
            </p>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">

        <!-- Contact Form Section -->
        <div class="lg:col-span-2 space-y-6">
            <div class="bg-surface-light dark:bg-surface-dark p-8 rounded-2xl shadow-sm border border-gray-200 dark:border-gray-700">
                <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">Mesaj Gönderin</h2>

                <!-- Success/Error Message -->
                @if (ViewBag.SuccessMessage != null)
                {
                    <div class="mb-6 p-4 bg-green-50 dark:bg-green-900/20 border border-green-200 dark:border-green-800 rounded-lg flex items-start gap-3">
                        <span class="material-symbols-outlined text-green-600 dark:text-green-400 text-xl flex-shrink-0 mt-0.5">check_circle</span>
                        <div class="flex-grow">
                            <h4 class="text-sm font-bold text-green-800 dark:text-green-300 mb-1">Başarılı!</h4>
                            <p class="text-sm text-green-700 dark:text-green-400">@ViewBag.SuccessMessage</p>
                        </div>
                    </div>
                }

                @if (ViewBag.ErrorMessage != null)
                {
                    <div class="mb-6 p-4 bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-lg flex items-start gap-3">
                        <span class="material-symbols-outlined text-red-600 dark:text-red-400 text-xl flex-shrink-0 mt-0.5">error</span>
                        <div class="flex-grow">
                            <h4 class="text-sm font-bold text-red-800 dark:text-red-300 mb-1">Hata!</h4>
                            <p class="text-sm text-red-700 dark:text-red-400">@ViewBag.ErrorMessage</p>
                        </div>
                    </div>
                }

                <form asp-action="Contact" asp-controller="Home" method="post" class="space-y-5">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <!-- Full Name -->
                        <div>
                            <label class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">
                                Ad Soyad
                            </label>
                            <input type="text"
                                   asp-for="FullName"
                                   class="w-full px-4 py-3 bg-gray-50 dark:bg-gray-800 border border-gray-300 dark:border-gray-600 rounded-lg text-gray-900 dark:text-white focus:ring-2 focus:ring-primary focus:border-transparent transition-all placeholder:text-gray-400"
                                   placeholder="Adınızı ve soyadınızı giriniz" />
                            <span asp-validation-for="FullName" class="text-xs text-red-600 dark:text-red-400 mt-1"></span>
                        </div>

                        <!-- Email -->
                        <div>
                            <label class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">
                                E-posta
                            </label>
                            <input type="email"
                                   asp-for="Email"
                                   class="w-full px-4 py-3 bg-gray-50 dark:bg-gray-800 border border-gray-300 dark:border-gray-600 rounded-lg text-gray-900 dark:text-white focus:ring-2 focus:ring-primary focus:border-transparent transition-all placeholder:text-gray-400"
                                   placeholder="ornek@mail.com" />
                            <span asp-validation-for="Email" class="text-xs text-red-600 dark:text-red-400 mt-1"></span>
                        </div>
                    </div>

                    <!-- Subject -->
                    <div>
                        <label class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">
                            Konu
                        </label>
                        <input type="text"
                               asp-for="Subject"
                               class="w-full px-4 py-3 bg-gray-50 dark:bg-gray-800 border border-gray-300 dark:border-gray-600 rounded-lg text-gray-900 dark:text-white focus:ring-2 focus:ring-primary focus:border-transparent transition-all placeholder:text-gray-400"
                               placeholder="Mesajınızın konusu" />
                        <span asp-validation-for="Subject" class="text-xs text-red-600 dark:text-red-400 mt-1"></span>
                    </div>

                    <!-- Message -->
                    <div>
                        <label class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">
                            Mesajınız
                        </label>
                        <textarea asp-for="Message"
                                  rows="6"
                                  class="w-full px-4 py-3 bg-gray-50 dark:bg-gray-800 border border-gray-300 dark:border-gray-600 rounded-lg text-gray-900 dark:text-white focus:ring-2 focus:ring-primary focus:border-transparent transition-all placeholder:text-gray-400 resize-none"
                                  placeholder="Size nasıl yardımcı olabiliriz?"></textarea>
                        <span asp-validation-for="Message" class="text-xs text-red-600 dark:text-red-400 mt-1"></span>
                    </div>

                    <!-- Submit Button -->
                    <button type="submit"
                            class="w-full md:w-auto px-8 py-3 bg-primary hover:bg-primary-dark text-white font-bold rounded-lg transition-all flex items-center justify-center gap-2 shadow-lg shadow-primary/30 hover:scale-[1.02]">
                        <span class="material-symbols-outlined">send</span>
                        Gönder
                    </button>
                </form>
            </div>
        </div>

        <!-- Contact Info Sidebar -->
        <div class="space-y-6">

            <!-- Contact Information Card -->
            <div class="bg-surface-light dark:bg-surface-dark p-6 rounded-2xl shadow-sm border border-gray-200 dark:border-gray-700">
                <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-6">İletişim Bilgileri</h3>
                <div class="space-y-6">

                    <!-- Location -->
                    <div class="flex gap-4">
                        <div class="bg-primary/10 p-3 rounded-lg text-primary flex items-center justify-center h-fit flex-shrink-0">
                            <span class="material-symbols-outlined">location_on</span>
                        </div>
                        <div>
                            <p class="font-bold text-gray-900 dark:text-white mb-1">Ofisimiz</p>
                            <p class="text-gray-600 dark:text-gray-400 text-sm leading-relaxed">
                                Fatih, İstanbul, Türkiye<br />
                                İSMEK Genel Müdürlük Binası
                            </p>
                        </div>
                    </div>

                    <!-- Email -->
                    <div class="flex gap-4">
                        <div class="bg-primary/10 p-3 rounded-lg text-primary flex items-center justify-center h-fit flex-shrink-0">
                            <span class="material-symbols-outlined">mail</span>
                        </div>
                        <div>
                            <p class="font-bold text-gray-900 dark:text-white mb-1">E-posta</p>
                            <a href="mailto:bilgi@ismekblog.com" class="text-gray-600 dark:text-gray-400 text-sm hover:text-primary transition-colors">
                                bilgi@ismekblog.com
                            </a>
                        </div>
                    </div>

                    <!-- Phone -->
                    <div class="flex gap-4">
                        <div class="bg-primary/10 p-3 rounded-lg text-primary flex items-center justify-center h-fit flex-shrink-0">
                            <span class="material-symbols-outlined">call</span>
                        </div>
                        <div>
                            <p class="font-bold text-gray-900 dark:text-white mb-1">Telefon</p>
                            <a href="tel:+902125550000" class="text-gray-600 dark:text-gray-400 text-sm hover:text-primary transition-colors">
                                +90 (212) 555 00 00
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Social Media -->
                <div class="mt-8 pt-8 border-t border-gray-200 dark:border-gray-700">
                    <p class="font-bold text-gray-900 dark:text-white mb-4">Sosyal Medya</p>
                    <div class="flex gap-3">
                        <a class="size-10 rounded-full bg-gray-100 dark:bg-gray-800 flex items-center justify-center text-gray-600 dark:text-gray-300 hover:bg-primary hover:text-white transition-all"
                           href="#" title="Web Sitesi">
                            <span class="material-symbols-outlined text-lg">public</span>
                        </a>
                        <a class="size-10 rounded-full bg-gray-100 dark:bg-gray-800 flex items-center justify-center text-gray-600 dark:text-gray-300 hover:bg-primary hover:text-white transition-all"
                           href="#" title="Sosyal Medya">
                            <span class="material-symbols-outlined text-lg">share</span>
                        </a>
                        <a class="size-10 rounded-full bg-gray-100 dark:bg-gray-800 flex items-center justify-center text-gray-600 dark:text-gray-300 hover:bg-primary hover:text-white transition-all"
                           href="#" title="Topluluk">
                            <span class="material-symbols-outlined text-lg">group</span>
                        </a>
                    </div>
                </div>
            </div>

            <!-- Map Card -->
            <div class="bg-surface-light dark:bg-surface-dark overflow-hidden rounded-2xl shadow-sm border border-gray-200 dark:border-gray-700 h-[280px] relative">
                <div class="absolute inset-0 bg-gray-200 dark:bg-gray-800"
                     style="background-image: url('https://images.unsplash.com/photo-1524661135-423995f22d0b?w=600'); background-size: cover; background-position: center;">
                    <!-- Map Overlay -->
                    <div class="flex items-center justify-center h-full flex-col text-gray-500 bg-black/20 backdrop-blur-sm">
                        <span class="material-symbols-outlined text-5xl mb-3 text-white drop-shadow-lg">location_on</span>
                        <span class="text-base font-semibold text-white drop-shadow-md">Fatih, İstanbul</span>
                        <span class="text-sm text-white/80 mt-1">Türkiye</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}